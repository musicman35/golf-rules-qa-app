# Anthropic API Key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Voyage AI API Key (for embeddings)
# Get from: https://www.voyageai.com/
VOYAGE_API_KEY=your_voyage_api_key_here

# Alternative: OpenAI API Key (if using OpenAI embeddings instead)
# OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
APP_ENVIRONMENT=development
LOG_LEVEL=INFO

# Scraping Settings
SCRAPE_DELAY_SECONDS=2
MAX_RETRIES=3

# RAG Settings
EMBEDDING_MODEL=voyage-2
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RESULTS=5

# Update Schedule (cron format: minute hour day month day_of_week)
# Default: Run at 2 AM on the 1st of each month
UPDATE_SCHEDULE_CRON="0 2 1 * *"
